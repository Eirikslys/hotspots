<div class="devise home-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(https://images.unsplash.com/photo-1570444024005-ab4268355612?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2734&q=80);">
  <!-- Using pt-5 to cheat the form down a little bit, probably not great but it works -->
      <div class="widget-content" data-unavailable="<%= @location.unavailable_dates.to_json %>">
  <div class="container pt-5">
    <div class="form-wrapper pt-5" style="width: 400px; margin: 0 auto;">
      <%= simple_form_for [@location, @rental], defaults: {input_html: {class: "datepicker" }} do |f| %>
        <%=f.input :start_date, as: :string, required: true, input_html: {class: "datepicker col-lg-12 col-sm-10 col-9" } %>
        <%=f.input :end_date, as: :string, required: true, input_html: {class: "datepicker col-lg-12 col-sm-10 col-9"}   %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
      </div>
</div>
