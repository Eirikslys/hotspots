<div class="index-page">

        <div class="cards row">
        <% @locations.each do |location| %>
        <!-- <div class="col-6"> -->

          <div class="card-product">
    <!--       <img src="https://images.unsplash.com/photo-1580587771525-78b9dba3b914?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80" />
     -->
              <%=  image_tag(location.photo)%>
              <div class="card-product-infos">
              <h2> <i class="fas fa-angle-double-right"></i> <%= location.name %></h2>
              <p> <i class="fas fa-map-marker-alt"></i> <%= "#{location.address}" %></p>
              <p> <i class="fas fa-info-circle"></i> <%= location.description %></p>
              <p> <i class="far fa-calendar-check"></i> <%= "Location is open for booking" %> </p>
              <div class="button-wrapper">

                <%= link_to(location_path(location), class: "my-a-tag") do %>
                  <button class="button">
                    <%= "More info about this" %>
                    <div class="button__horizontal"></div>
                    <div class="button__vertical"></div>
                  </button>
                <% end %>
              </div>

            </div>
          </div>
        <!-- </div> -->

      <% if location.rental.last %>
      <!-- <p> This location is rented out from <%#= location.rental.last.start_date.strftime("%A, %B %d. ") %> to
      <%#= location.rental.last.end_date.strftime("%A, %B %d.") %> </p> -->
      <%end %>
    <% end %>
  </div>
  </div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>


